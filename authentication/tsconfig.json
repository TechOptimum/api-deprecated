{
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "ES2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "alwaysStrict": true,
    "declaration": true,
    "removeComments": true,
    "incremental": true,
    "esModuleInterop": true,
  }
}